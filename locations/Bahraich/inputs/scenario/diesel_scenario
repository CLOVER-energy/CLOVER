diesel_scenarios:
  - name: default
    mode: backup # "backup" or "disabled" currently supported
    backup:
      threshold: 0.1 # Maximum acceptible blackouts (0.0-1.0)
  - name: cycle_charging_default
    mode: cycle_charging
    times:
      - name: universal
        max_soc: 0.9 # The state of charge the diesel generator charges to
        min_soc: 0.2 # The state of charge the diesel generator switches on
        start_hour: 8 # The start hour for these settings (24hr clock)
        end_hour: 19 # The end hour for these settings (24hr clock)
